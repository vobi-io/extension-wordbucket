{
  "manifest_version": 2,
  "name": "Wordbucket",
  "description": "Wordbucket chrome extension",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["assets/css/styles.css"],
      "js": ["api.js", "background.js"]
    }
  ],
  "background": { 
    "scripts": ["api.js", "contextMenu.js"]
  },
  "options_page": "options/options.html",
  "browser_action": {
    "default_title": "This is a test",
    "default_popup": "popup.html"
  }
}
