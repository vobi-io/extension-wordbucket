{
  "manifest_version": 2,
  "name": "Wordbucket",
  "description": "Wordbucket chrome extension",
  "version": "1.2",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["assets/css/styles.css"],
      "js": ["api.js", "background.js"]
    }
  ],
  "background": { 
    "scripts": ["api.js", "contextMenu.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_title": "Wordbucket",
    "default_popup": "popup/popup.html"
  }
}
